<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InSoptBasicButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="InSoptEditText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:maxLength">10</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@color/hous_g_5</item>
        <item name="colorControlActivated">@color/hous_blue</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColorHint">@color/hous_g_5</item>
    </style>

    <style name="CornerSize50Percent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>